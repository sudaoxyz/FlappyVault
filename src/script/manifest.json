{
	"manifest_version": 3,
	"name": "BoternetExt",
	"description": "BoternetExt是一个自动化网页插件，提供了简单便捷的自动化网页操作。",
	"version": "0.1.0",
	"icons": {
		"128": "icon128.png"
	},
	"action": {
		"default_title": "开启你的boter"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"file://*/*",
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"contentscript.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"host_permissions": [
		"http://localhost:8545/",
		"file://*/*",
		"http://*/*",
		"https://*/*"
	],
	"permissions": [
		"alarms",
		"tabs",
		"clipboardWrite",
		"storage",
		"unlimitedStorage",
		"debugger"
	],
	"web_accessible_resources": [
		{
			"use_dynamic_url": true,
			"matches": [
				"<all_urls>"
			],
			"resources": [
				"lib/inpage_base.js",
				"lib/inpage_boter.js",
				"lib/inpage_controller.js",
				"lib/wallet_provider.js"
			]
		}
	]
}