{
	"manifest_version": 3,
	"name": "EvalSocial",
	"description": "EvalSocial is a web automation helper for eval.social",
	"version": "0.1.0",
	"icons": {
		"128": "icon128.png"
	},
	"action": {
		"default_title": "EvalSocial"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"file://*/*",
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"contentscript.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"host_permissions": [
		"http://localhost:8545/",
		"file://*/*",
		"http://*/*",
		"https://*/*"
	],
	"permissions": [
		"alarms",
		"tabs",
		"clipboardWrite",
		"storage",
		"unlimitedStorage",
		"debugger"
	],
	"web_accessible_resources": [
		{
			"use_dynamic_url": true,
			"matches": [
				"<all_urls>"
			],
			"resources": [
				"inpage/evalsocial.js"
			]
		}
	]
}